{
    "properties": {
        "id": {
            "type": "id",
            "label": "ID"
        },
        "search_ident": {
            "type": "string",
            "label": {
                "en": "Identifier",
                "fr": "Identifiant"
            }
        },
        "keyword": {
            "type": "text",
            "label": {
                "en": "Query",
                "fr": "Requête"
            }
        },
        "num_results": {
            "type": "integer",
            "label": {
                "en": "Number of Results",
                "fr": "Nombre de résultats"
            }
        },
        "results": {
            "type": "structure",
            "label": {
                "en": "Results",
                "fr": "Résultats"
            }
        },
        "ip": {
            "type": "ip",
            "label": {
                "en": "IP Address",
                "fr": "Adresse IP"
            },
            "description": {
                "en": "The remote (client) IP address at the creation time. Typically auto-genereted on save (or send).",
                "fr": "L'adresse IP du client au moment de la création. Habituellement auto-générée lors de la sauvegarde / l'envoi."
            }
        },
        "lang": {
            "type": "lang",
            "label": {
                "en": "Language",
                "fr": "Langue"
            }
        },
        "ts": {
            "type": "date-time",
            "label": {
                "en": "Timestamp",
                "fr": "Horodatage"
            },
            "description": {
                "en": "The date and time of creation. Typically auto-generated on save (or send).",
                "fr": "La date (à la seconde) de création. Habituellement auto-générée lors de la sauvegarde (ou l'envoi)."
            }
        },
        "origin": {
            "type": "text",
            "label": {
                "en": "Origin",
                "fr": "Origine"
            },
            "description": {
                "en": "The location (e.g., URL) that contained the form the user submitted or action triggered.",
                "fr": "L'emplacement (e.g., URL) qui contenait le formulaire que l'utilisateur a soumis ou l'action exécutée."
            }
        }
    },

    "sources": {
        "default": {
            "table": "charcoal_search_logs"
        }
    },
    "default_source": "default",

    "admin": {
        "lists": {
            "default": {
                "properties": [
                    "search_ident",
                    "ts",
                    "keyword",
                    "num_results"
                ],
                "orders": [
                    {
                        "property": "ts",
                        "mode": "desc"
                    }
                ]
            }
        },
        "default_list": "default",

        "forms": {
            "default": {}
        },
        "default_form": "default",

        "dashboards": {
            "admin.edit": {},
            "admin.table": {
                "title": {
                    "fr": "Recherches",
                    "en": "Searches"
                },
                "layout": {
                    "structure": [
                        {
                            "columns": [ 1, 1 ]
                        },
                        {
                            "columns": [ 1 ]
                        }
                    ]
                },
                "widgets": {
                    "top": {
                        "type": "charcoal/admin/widget/search/top-search",
                        "priority": 1
                    },
                    "no-results": {
                        "type": "charcoal/admin/widget/search/no-results-search",
                        "priority": 2
                    },
                    "table": {
                        "type": "charcoal/admin/widget/table",
                        "collection_ident": "default",
                        "obj_type": "charcoal/search/search-log",
                        "priority": 3
                    }
                }
            }
        },
        "default_create_dashboard": "admin.edit",
        "default_edit_dashboard": "admin.edit",
        "default_collection_dashboard": "admin.table"
    }
}
