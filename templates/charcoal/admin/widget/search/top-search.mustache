{{!--
    Search History Widget \ Top Searches
    ====================================

    @used-by `charcoal/admin/widget/search/top-search`
--}}
{{# hasSearchHistory }}
<div class="o-section">
    <header class="o-header">
        <h2>{{#_t}}Recherches plus populaires{{/_t}}</h2>
    </header>

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>{{#_t}}Mot-clé{{/_t}}</th>
                <th>{{#_t}}Nombre de recherches{{/_t}}</th>
                <th>{{#_t}}Nombre de résultats{{/_t}}</th>
                <th>{{#_t}}Date de la recherche{{/_t}}</th>
            </tr>
        </thead>
        <tbody>
        {{# searchHistory }}
            <tr>
                <td>{{keyword}}</td>
                <td>{{num_searches}}</td>
                <td>{{num_results}}</td>
                <td>{{ts}}</td>
            </tr>
        {{/ searchHistory }}
        </tbody>
    </table>
</div>
{{/ hasSearchHistory }}
